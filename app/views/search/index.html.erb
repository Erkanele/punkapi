<%= form_tag search_path, method: :get do %>
  <%= label_tag :q, "Search for a beer:" %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<%= paginate @beers %>
<% if @beers.empty? %>
  <p>No beers were found, try again.</p>
<% else %>
  <% @beers.each do |beer| %>
    <h2><%= beer["name"] %></h2>
    <p><%= beer["abv"] %>% ABV</p>
    <p><%= beer["description"] %></p>
    <p><b>Food matching:</b> <%= beer["food_pairing"].join(", ") %></p>
  <% end %>
<% end %>
